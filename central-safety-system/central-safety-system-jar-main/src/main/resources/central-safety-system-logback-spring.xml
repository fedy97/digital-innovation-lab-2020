<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<include
		resource="org/springframework/boot/logging/logback/base.xml" />
	<include
		resource="org/springframework/boot/logging/logback/defaults.xml" />


	<property name="LOG_FILE" value="${LOG_FILE}"></property>

	<!--APPENDER CONFIGURATION FOR CONSOLE LOGGING -->
	<appender name="console"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d|%5p|%X{ip}|%X{callContext}|%X{serviceName}|%X{methodName}|%X{application}|%X{channel}|%X{locale}|%X{sessionId}|%replace(%msg){'\b([0]*)(([245]){1}\d{5})(\d{2})(\d{4})(\d{4})\b','$1$2******$6'}%n
			</pattern>
		</encoder>
	</appender>


	<appender name="RollingFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_FILE}_${HOSTNAME}.log</file>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>${PATTERN}</Pattern>
		</encoder>

		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily and when the file reaches 10 MegaBytes -->
			<fileNamePattern>${LOG_FILE}_${HOSTNAME}-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d|%5p|%X{ip}|%X{callContext}|%X{serviceName}|%X{methodName}|%X{application}-%X{channel}-%X{locale}|%X{sessionId}|%replace(%msg){'\b([0]*)(([245]){1}\d{5})(\d{2})(\d{4})(\d{4})\b','$1$2******$6'}%n
			</pattern>
		</encoder>
	</appender>

	<appender name="ASYNC_LOG_CONSOLE"
		class="ch.qos.logback.classic.AsyncAppender">
		<queueSize>750</queueSize>
		<discardingThreshold>0</discardingThreshold>
		<appender-ref ref="console" />
	</appender>

	<appender name="ASYNC_LOG_SERVICE"
		class="ch.qos.logback.classic.AsyncAppender">
		<queueSize>750</queueSize>
		<discardingThreshold>0</discardingThreshold>
		<appender-ref ref="RollingFile" />
	</appender>

	<!--START LOCAL CONFIGURATION -->
	<springProfile name="local">
		<logger name="it.css" level="INFO" additivity="false">
			<appender-ref ref="ASYNC_LOG_SERVICE" />
			<appender-ref ref="ASYNC_LOG_CONSOLE" />
		</logger>
	</springProfile>
	<!-- END LOCAL CONFIGURATION -->

	<!--START DEV CONFIGURATION -->
	<springProfile name="dev">
		<logger name="it.css" level="INFO" additivity="false">
			<appender-ref ref="ASYNC_LOG_SERVICE" />
			<appender-ref ref="ASYNC_LOG_CONSOLE" />
		</logger>
	</springProfile>
	<!-- END DEV CONFIGURATION -->

</configuration>